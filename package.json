{
  "name": "up-mcp-bridge",
  "version": "1.0.18",
  "description": "Remote proxy for MCP with auto-reconnect support. Fork of mcp-remote with transparent server restart handling.",
  "keywords": [
    "mcp",
    "stdio",
    "sse",
    "remote",
    "oauth",
    "auto-reconnect",
    "reconnection"
  ],
