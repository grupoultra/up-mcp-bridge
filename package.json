  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grupoultra/up-mcp-bridge.git"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/index.js",
  "bin": {
    "up-mcp-bridge": "dist/proxy.js",
    "up-mcp-bridge-client": "dist/client.js"
